{
    "manifest_version": 2,
    "name": "Office AI",
    "version": "1.0.0",
    "description": "With Office AI, you will be able to correct and translate text by simply entering the desired text and clicking a button. Additionally, you can choose to converse with ChatGPT. All in one place. Office AI.",
    "icons": {
      "16": "./public/logo.png",
      "48": "./public/logo.png",
      "128": "./public/logo.png"
    },


    "content_scripts": [
      {
        "matches": [
          "https://*/*",
          "http://*/*"
        ],
        "js": ["./src/main.jsx"],
        "css": ["./src/index.css"]
      }
    ],

    "browser_action": {
      "default_icon": {
        "16": "./public/logo.png",
        "48": "./public/logo.png",
        "128": "./public/logo.png"
      }
    },
    "permissions": [
        "tabs"
      ],
    "background": {
        "scripts": ["./background.js"],
        "persistent": false
      }
  }
